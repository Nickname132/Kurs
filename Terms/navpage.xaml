        <Button Content="Этология"  FontWeight="Bold" FontFamily="Gil Sans MT" FontStyle="Oblique" Background='violet' x:Name="Ethology" 
             Click="BtnBack_Click3" Width="148" Grid.Column="1" Height="Auto"/>
        <Button Content="Геополитика"  FontWeight="Bold" FontFamily="Gil Sans MT" FontStyle="Oblique" Background='MediumPurple'  x:Name="Geopolitic" 
             Click="BtnBack_Click4" Width="172" Height="Auto" Grid.Column="2"/>
    </Grid>
</Page>
